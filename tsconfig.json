{
    "compilerOptions": {
        "noImplicitAny": true,
        "outDir": "build/types",
        "module": "esnext",
        "target": "es5",
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "moduleResolution": "node"
    },
    "include": [
        "src/lib",
        "ts_modules/*.d.ts"
    ],
    "exclude": [
        "src/lib/**/tests"
    ]
}