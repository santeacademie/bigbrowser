{
	"compilerOptions": {
		"noImplicitAny": true,
		"outDir": "build/types",
		"module": "esnext",
		"target": "es5",
		"moduleResolution": "node",
		"allowJs": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"strict": true,
		"suppressImplicitAnyIndexErrors": true,
		"baseUrl": "src/lib",
		"paths": {
			"@config/*": [
				"config/*"
			],
			"@controller/*": [
				"controller/*"
			],
			"@core/*": [
				"core/*"
			]
		},
		"lib": [
			"es2018",
			"dom"
		]
	},
	"include": [
		"src/lib",
		"ts_modules/*.d.ts"
	],
	"exclude": [
		"src/lib/**/tests"
	]
}